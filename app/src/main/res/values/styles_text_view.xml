<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">sans</item>
    </style>

    <style name="AppTextView.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!-- https://material.google.com/style/typography.html#typography-styles -->

    <style name="AppTextView.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center|start</item>
    </style>

    <style name="AppTextView.Caption.Inverse" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTextView.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="AppTextView.Body1.Inverse">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTextView.Body2" parent="TextAppearance.AppCompat.Body2" />

    <style name="AppTextView.Body2.Inverse">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTextView.Subhead" parent="TextAppearance.AppCompat.Subhead" />

    <style name="AppTextView.Subhead.Inverse" parent="TextAppearance.AppCompat.Subhead.Inverse" />

    <style name="AppTextView.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans</item>
    </style>

    <style name="AppTextView.Title.Inverse" parent="TextAppearance.AppCompat.Title.Inverse" />

    <style name="AppTextView.Headline" parent="TextAppearance.AppCompat.Headline" />

    <style name="AppTextView.Headline.Inverse">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
