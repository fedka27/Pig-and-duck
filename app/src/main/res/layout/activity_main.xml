<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <FrameLayout
        android:id="@+id/fragment_container_view_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

    <RadioGroup
        android:id="@+id/tabs_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable_size"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/news_radio_button"
            style="@style/AppRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_news_button"
            android:paddingTop="@dimen/margin_small" />

        <RadioButton
            android:id="@+id/settings_radio_button"
            style="@style/AppRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_settings_button"
            android:gravity="center"
            android:paddingTop="@dimen/margin_small" />

    </RadioGroup>
</LinearLayout>